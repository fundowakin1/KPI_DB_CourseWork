@model List<DataBasesCourseWorkApplication.ViewModel.StudentFullInfoViewModel>
@{
    ViewData["Title"] = "Курсова з дисципліни Бази Даних";
}
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">ПІБ</th>
        <th scope="col">Стать</th>
        <th scope="col">Номер телефону</th>
        <th scope="col">Факультет</th>
        <th scope="col">Номер кімнати</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 0; i < Model.Count; i++)
    {
        <tr>
            <th scope="row">@(i+1)</th>
            <td>@Model[i].FullName</td>

            <td>@if(Model[i].Gender)
                {<p>Чол</p>}
                else
                {<p>Жін</p>}</td>
            <td>+@Model[i].PhoneNumber</td>
            <td>@Model[i].FacultyName</td>
            <td>@if(Model[i].RoomId is null)
                {<p>Кімната відсутня</p>}
                else
                {@Model[i].RoomNumber}</td>
            <td><button type="button" class="btn btn-danger"  
                        onclick="location.href = '@Url.Action("DeleteStudent", "Student", new{id = Model[i].StudentId})'">Видалити</button></td>
            <td><button type="button" class="btn btn-primary"
                        onclick="location.href = '@Url.Action("EditStudent", "Student", new{id = Model[i].StudentId})'">Редагувати</button></td>
        </tr>
    }
    </tbody>
</table>


